---
import Footer from "../components/Footer.astro";

const { frontmatter } = Astro.props;

const links =[
	{ name: '@fmbarbieri', url: 'https://www.instagram.com/fmbarbieri/' },
	{ name: 'linkedin', url: 'https://www.linkedin.com/in/barbieri-francesco' },
	{ name: 'github', url: 'https://github.com/francescobarbieri' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name='language' content='en'>
		<meta name='copyright' content='Barbieri Notes' />
		<meta name="generator" content={Astro.generator} />
		<meta name='url' content='https://www.barbierinotes.com'>
		<meta name='author' content='Francesco Barbieri, me@barbierinotes.com'>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name='keywords' content='barbierinotes, barbieri notes, francesco barbieri, software, engineer, hpc' />

		<meta name='og:title' content='The Rock'>
		<meta name='og:type' content='movie'>
		<meta name='og:url' content='http://www.imdb.com/title/tt0117500/'>
		<meta name='og:image' content='http://ia.media-imdb.com/rock.jpg'>
		<meta name='og:site_name' content='IMDb'>
		<meta name='og:description' content='A group of U.S. Marines, under command of...'>
		
		<title>{frontmatter.title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body>
		<main>
			<slot />
		</main>
		<Footer links={links} />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
